# Environment Configuration for MedBot
# Copy this file to .env and modify as needed

# Flask Configuration
FLASK_ENV=production
FLASK_APP=app.py

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Model Configuration
MODEL_PATH=./models
MAX_NEW_TOKENS=256
TEMPERATURE=0.7
TOP_P=0.9

# Optional: HuggingFace Hub Token (for private models)
# HF_TOKEN=your_token_here

# Deployment Platform Variables (set by platform)
# RENDER=true
# RAILWAY_ENVIRONMENT=production
# FLY_APP_NAME=your-app-name

# Security (for production)
# SECRET_KEY=your-secret-key-here
